
{{#if addNewRental}}
  <form>
    <div class="form-group">
      <label for="owner">Owner</label>
      {{input value=owner class="form-control" id="owner"}}
    </div>

    <div class="form-group">
      <label for="type">Type</label>
      {{input value=type class="form-control" id="type"}}
    </div>

    <div class="form-group">
      <label for="city">City</label>
      {{input value=city class="form-control" id="city"}}
    </div>

    <div class="form-group">
      <label for="bedrooms">Number of Bedrooms</label>
      {{input value=bedrooms class="form-control" id="bedrooms"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image class="form-control" id="image"}}
    </div>

    <button class="btn" {{action 'saveRental'}}>Save</button>
  </form>
{{else}}
  <button class="btn" {{action 'rentalFormShow'}}>New Rental</button>
{{/if}}
