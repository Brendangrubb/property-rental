{{#if updateForm}}
  <h4>Update {{announcement.owner}}'s {{announcement.type}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=announcement.owner}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=announcement.type}}
      </div>

      <div class="form-group">
        <label for="body">What did you mean to say?</label>
        {{input value=body id="body" placeholder=announcement.city}}
      </div>

      <button class="btn" {{action 'update' announcement}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action 'updateForm'}}>Update</button>
{{/if}}
