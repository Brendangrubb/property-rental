{{yield}}

{{#if addNewAnnouncement}}
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title class="form-control" id="title"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date class="form-control" id="date"}}
      </div>

      <div class="form-group">
        <label for="body">What do you have to say??</label>
        {{input value=body class="form-control input-lg" id="body"}}
      </div>

      <button class="btn" {{action 'saveAnnouncement'}}>Save Announcement</button>
    </form>
{{else}}
  <button class="btn" {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
