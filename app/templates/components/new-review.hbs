{{#if addNewReview}}
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author class="form-control" id="author"}}
    </div>
    <div class="form-group">
      <label for="rating">Rating</label>
      {{input value=rating class="form-control" id="rating"}}
    </div>
    <div class="form-group">
      <label for="content">Review</label>
      {{input value=content class="form-control input-lg" id="content"}}
    </div>
    <button class="btn" {{action "saveReview"}}>Save Review</button>
  </form>
{{else}}
  <button class="btn" {{action "reviewFormShow"}}>New Review</button>
{{/if}}
